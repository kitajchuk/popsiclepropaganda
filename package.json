{
  "name": "popsiclepropaganda",
  "version": "0.1.0",
  "description": "Exploring the Cardano Blockchain",
  "private": true,
  "scripts": {
    "preinstall": "cd app && yarn",
    "postinstall": "echo \"NETWORK=testnet\" > .env && echo \"BROWSER=none\" >> .env && echo \"NODE_ENV=development\" >> .env",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start:app": "env-cmd --file .env docker-compose --project-name cardano up",
    "stop:app": "env-cmd --file .env docker-compose --project-name cardano down",
    "start:src": "env-cmd --file .env concurrently \"react-scripts start\" \"electron .\"",
    "build:src": "env-cmd --file .env react-scripts build",
    "test:src": "env-cmd --file .env react-scripts test",
    "eject:src": "env-cmd --file .env react-scripts eject",
    "electron:dev": "NODE_ENV=production electron ."
  },
  "homepage": "./",
  "dependencies": {
    "@reduxjs/toolkit": "^1.5.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "classnames": "^2.2.6",
    "css-loader": "^6.5.1",
    "env-cmd": "^10.1.0",
    "nanoid": "^3.1.30",
    "node-sass": "^6.0.0",
    "react": "^17.0.1",
    "react-blockies": "^1.4.1",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "concurrently": "^6.5.1",
    "electron": "^16.0.5"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": []
  },
  "main": "electron/main.js"
}
